@page
@model Healio.Pages.LoginModel
@{
    ViewData["Title"] = "Bejelentkezés";
}

<h2>Bejelentkezés</h2>
<form method="post">
    <div>
        <label>Email:</label>
        <input asp-for="Email" type="email" required />
    </div>
    <div>
        <label>Jelszó:</label>
        <input asp-for="Password" type="password" required />
    </div>
    <button type="submit">Bejelentkezés</button>
    @if (!ModelState.IsValid)
    {
        <p style="color:red">@Html.ValidationSummary()</p>
    }
</form>