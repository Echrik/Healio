@page
@model IndexModel
@{
    ViewData["Title"] = "Főoldal";
}
<style>
    .hero {
        background: linear-gradient(135deg, #FFFFFF 0%, #F4F7FA 100%);
        padding: 60px;
        border-radius: 16px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .hero::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle, rgba(42, 106, 143, 0.1) 0%, transparent 70%);
            z-index: 0;
        }

    h1 {
        color: #2A6A8F;
        font-size: 2.8rem;
        font-weight: 700;
        margin-bottom: 20px;
        position: relative;
        z-index: 1;
    }

    p {
        color: #1A3C5A;
        line-height: 1.8;
        font-size: 1.2rem;
        margin-bottom: 30px;
        position: relative;
        z-index: 1;
    }
     nav ul {
            list-style: none;
            display: flex;
            gap: 25px;
        }

            nav ul li a {
                color: #1A3C5A;
                text-decoration: none;
                font-weight: 500;
                font-size: 1rem;
                padding: 8px 15px;
                border-radius: 20px;
                transition: all 0.3s ease;
            }

                nav ul li a:hover {
                    background-color: #2A6A8F;
                    color: #FFFFFF;
                }

    .cta-buttons {
        display: flex;
        justify-content: center;
        gap: 20px;
        position: relative;
        z-index: 1;
    }

    a {
        background-color: #FF6F61;
        color: #FFFFFF;
        padding: 12px 25px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        a:hover {
            background-color: #2A6A8F;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
        }


</style>
<div class="hero">
    <h1>Üdvözöllek a Healio-ban!</h1>
    <p>Modern E-Egészségügyi alkalmazás időpontfoglaláshoz, egészségügyi adatkezeléshez és orvosokkal való kapcsolattartáshoz.</p>
    <div class="cta-buttons">
        <a asp-page="/Register">Regisztrálj</a>
        <a asp-page="/Login">Bejelentkezés</a>
    </div>
</div>