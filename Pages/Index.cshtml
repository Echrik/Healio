@page
@model IndexModel
@{
    ViewData["Title"] = "Főoldal";
}
<style>
    .hero {
        background: #263238;
        padding: 40px;
        border: 2px solid #2E7D32; 
        text-align: center;
    }

    h1 {
        color: #4CAF50; 
        font-size: 2.2rem;
        font-weight: 700;
        margin-bottom: 15px;
    }

    p {
        color: #E0E0E0;
        line-height: 1.6;
        font-size: 1.1rem;
        margin-bottom: 20px;
    }

    .cta-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
    }

    a {
        background-color: #2E7D32; 
        color: #FFFFFF;
        padding: 10px 20px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        a:hover {
            background-color: #4CAF50; 
        }
    @@media (max-width: 768px) {
        .hero

    {
        padding: 20px;
    }

    h1 {
        font-size: 1.8rem;
    }

    p {
        font-size: 1rem;
    }

    .cta-buttons {
        flex-direction: column;
        gap: 10px;
    }

    a {
        padding: 8px 15px;
        font-size: 0.9rem;
    }

    }
</style>
<div class="hero">
    <h1>Üdvözöllek a Healio-ban!</h1>
    <p>Modern E-Egészségügyi alkalmazás időpontfoglaláshoz, egészségügyi adatkezeléshez és orvosokkal való kapcsolattartáshoz.</p>
    <div class="cta-buttons">
        <a asp-page="/Register">Regisztrálj</a>
        <a asp-page="/Login">Bejelentkezés</a>
    </div>
</div>