@page
@model Healio.Pages.RegisterModel
@{
    ViewData["Title"] = "Regisztráció";
}
<h2>Regisztráció</h2>
<form method="post">
    <div>
        <label>Email:</label>
        <input asp-for="User.Email" type="email" required />
    </div>
    <div>
        <label>Név:</label>
        <input asp-for="Name" type="text" required />
    </div>
    <div>
        <label>Jelszó:</label>
        <input asp-for="Password" type="password" required />
    </div>
    <div>
        <label>Szerepkör:</label>
        <select asp-for="User.Role" required>
            <option value="patient">Páciens</option>
            <option value="doctor">Orvos</option>
        </select>
    </div>
    <button type="submit">Regisztráció</button>
</form>