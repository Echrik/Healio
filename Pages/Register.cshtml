@page
@model Healio.Pages.RegisterModel
@{
    ViewData["Title"] = "Regisztráció";
}

@section Styles {
    <link rel="stylesheet" href="~/css/register.css" />
}

<div class="register-container">
    <h2>Regisztráció</h2>

    <form method="post" class="register-form">
        <div class="form-group">
            <label asp-for="User.Email">Email</label>
            <input asp-for="User.Email" type="email" required />
        </div>

        <div class="form-group">
            <label asp-for="Name">Név</label>
            <input asp-for="Name" type="text" required />
        </div>

        <div class="form-group">
            <label asp-for="Password">Jelszó</label>
            <input asp-for="Password" type="password" required />
        </div>

        <div class="form-group">
            <label asp-for="User.Role">Szerepkör</label>
            <select asp-for="User.Role" required>
                <option value="patient">Páciens</option>
                <option value="doctor">Orvos</option>
            </select>
        </div>

        <button type="submit">Regisztráció</button>
    </form>
</div>
